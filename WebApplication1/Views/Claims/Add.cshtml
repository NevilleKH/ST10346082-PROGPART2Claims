@model WebApplication1.Models.AddClaimViewModel


<h1>Add Student</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">ID</label>
        <input type="number" class="form-control" asp-for="Id" />

    </div>
    <div class="mt-3">
        <label class="form-label">Full Name</label>
        <input type="text" class="form-control" asp-for="FullName" />

    </div>

    <div class="mt-3">
        <label class="form-label">UPLOAD FILE</label>
        <input type="file" id="file" name="filename">
    </div>
   


    <div class="mt-3">
        <label class="form-label">Hours Worked</label>
        <input name="HoursWorked" type="number" class="form-control" asp-for="HoursWorked" />
    </div>

    <div class="mt-3">
        <label class="form-label">Hourly Rate</label>
        <input name="HourlyRate" type="number" class="form-control" asp-for="HourlyRate" />
    </div>

    <div class="mt-3">
        <button type="button" onclick="performCalc()" class="btn btn-primary">Total</button>
    </div>

    <div class="mt-3">
        <label class="form-label">Total Amount</label>
        <input id="hAnswer" type="number" class="form-control" asp-for="TotalAmount" readonly />
    </div>
    <div class="mt-3">
        <label class="form-label">Claim Status</label>
        <input type="text" class="form-control" asp-for="ClaimStatus" value="Pending" readonly/>

    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

