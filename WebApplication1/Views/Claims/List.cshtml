@{
}
@model List<WebApplication1.Models.Entities.Claim>
<h1>Pending Claims</h1>

<table class="table">
    <thead>
        <tr>
            <th>Claim Number</th>
            <th>Full Name</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Amount</th>
            <th>Claim Status</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Id</td>
                <td>@claim.FullName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.TotalAmount</td>
                <td>@claim.ClaimStatus</td>
                <td>
                    <a asp-controller="Claims" asp-action="Accepted" asp-route-id="@claim.Id" class="btn btn-primary">Approve</a>
                </td>
                <td>
                    <a asp-controller="Claims" asp-action="Denied" asp-route-id="@claim.Id" class="btn btn-primary">Reject</a>
                </td>
            </tr>
        }
    </tbody>

</table>